<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:background="@color/white"
    tools:context="isep.moodup.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="340dp"
        android:layout_height="157dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="0.30"
        android:paddingBottom="20dp"
        android:src="@drawable/logo_one" />


    <EditText
        android:id="@+id/username"
        style="@style/editextgraybg"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/ic_username"
        android:hint="Identifiant" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/password"
        style="@style/editextgraybg"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/pad_20dp"
        android:layout_marginTop="@dimen/pad_10dp"
        android:drawableLeft="@drawable/ic_pwd"
        android:hint="Mot de passe"
        android:inputType="textPassword" >
    </EditText>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonUserLogin"
            style="@style/btn_white_large"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Se connecter" />

        <Button
            android:id="@+id/buttonUserRegistration"
            style="@style/btn_white_large"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="S'inscrire"
            android:layout_marginLeft="@dimen/pad_10dp"/>
    </LinearLayout>
</LinearLayout>
